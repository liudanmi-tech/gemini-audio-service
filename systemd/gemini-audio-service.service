[Unit]
Description=Gemini Audio Service (uvicorn port 8000)
After=network.target

[Service]
Type=simple
User=admin
WorkingDirectory=/home/admin/gemini-audio-service
Environment=PATH=/home/admin/gemini-audio-service/venv/bin
ExecStart=/home/admin/gemini-audio-service/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000 --workers 4
Restart=on-failure
RestartSec=5
StandardOutput=append:/home/admin/gemini-audio-service.log
StandardError=append:/home/admin/gemini-audio-service.log

[Install]
WantedBy=multi-user.target
